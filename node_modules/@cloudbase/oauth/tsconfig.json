{
  "compilerOptions": {
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es6", "es2020"],
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
