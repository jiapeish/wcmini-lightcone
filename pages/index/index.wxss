.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
}

.title-bar {
  width: 8rpx;
  height: 40rpx;
  background: #1890ff;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-title .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-title .subtitle {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
  font-weight: normal;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.grid-item {
  width: calc(50% - 10rpx);
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  min-height: 180rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.grid-item.blue-long {
  width: 100%;
  background: linear-gradient(to right, #4fc3f7, #2196f3);
}

.item-content {
  padding: 30rpx;
  height: 100%;
  position: relative;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  width: calc(100% - 120rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-subtitle {
  font-size: 24rpx;
  color: #666;
  width: calc(100% - 120rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.6;
}

/* Card Colors */
.yellow {
  background-color: #fff7e6;
}

.blue {
  background-color: #e6f7ff;
}

.pink {
  background-color: #fff0f6;
}

.green {
  background-color: #f6ffed;
}

.light-blue {
  background-color: #e6fffb;
}

.purple {
  background: linear-gradient(to right, #e9d8fd, #d6bcfa);
}

.user-count {
  display: flex;
  align-items: center;
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.user-count text {
  font-size: 28rpx;
  color: #666;
}

.blue-long .item-title,
.blue-long .item-subtitle {
  color: white;
}

.blue-long .item-icon {
  opacity: 0.8;
}

.purple.blue-long {
  background: linear-gradient(to right, #e9d8fd, #d6bcfa);
}

.purple.blue-long .item-title,
.purple.blue-long .item-subtitle {
  color: #333;
}
